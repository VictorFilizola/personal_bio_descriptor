@page "/login"
@using LE_Digital_2_Blazor_Server_WebApp.Server.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card mt-5">
                <div class="card-header">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        @* Added @onkeydown="HandleKeyDown" *@
                        <input id="username" class="form-control"
                               @bind="username"
                               @onkeydown="HandleKeyDown"
                               placeholder="e.g., TEIXVIBR" />
                    </div>
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-2">@errorMessage</div>
                    }
                    <button class="btn btn-primary mt-3 w-100" @onclick="HandleLogin">Login</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string? errorMessage;
    [Inject] private IManagerService ManagerService { get; set; } // Inject ManagerService

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await HandleLogin();
        }
    }

    private async Task HandleLogin()
    {
        errorMessage = null;
        if (string.IsNullOrWhiteSpace(username))
        {
            errorMessage = "Please enter a username.";
            return;
        }

        var customAuthProvider = (CustomAuthenticationStateProvider)AuthStateProvider;
        var success = await customAuthProvider.LoginAsync(username);

        if (success)
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            // Priority 1: Controller / Master
            if (user.IsInRole("Controller") || user.IsInRole("Master"))
            {
                NavManager.NavigateTo("/");
            }
            // Priority 2: Director (who may also have manager tasks)
            else if (user.IsInRole("Director"))
            {
                NavManager.NavigateTo("/director/dashboard");
            }
            // Priority 3: Pure Manager
            else if (user.IsInRole("Manager"))
            {
                // Check if they have tasks
                var tasks = await ManagerService.GetPendingManagerTasksAsync(user);
                if (tasks.Any())
                {
                    NavManager.NavigateTo("/manager/dashboard");
                }
                else
                {
                    errorMessage = "You are a Manager, but you have no pending tasks.";
                    customAuthProvider.Logout();
                }
            }
            else
            {
                errorMessage = "You do not have a role assigned that allows access.";
                customAuthProvider.Logout();
            }
        }
        else
        {
            errorMessage = "Login failed. User not found or has no permissions.";
        }
    }
}