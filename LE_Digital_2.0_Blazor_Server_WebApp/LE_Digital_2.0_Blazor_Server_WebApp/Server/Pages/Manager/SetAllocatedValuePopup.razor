@using LE_Digital_2_Blazor_Server_WebApp.Core.Models
@using LE_Digital_2_Blazor_Server_WebApp.Core.Interfaces
@using System.Security.Claims
@using System.Globalization @* <-- ADD THIS *@

@inject IManagerService ManagerService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject ILogger<SetAllocatedValuePopup> Logger

@if (IsVisible && TargetCostCenter != null)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" style="display:block" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Set Allocated Value for @TargetCostCenter.CostCenterCode</h5>
                    <button type="button" class="btn-close" @onclick="ClosePopup"></button>
                </div>
                <div class="modal-body">
                    <p>Enter the total budget you want to allocate to this cost center (@TargetCostCenter.CostCenterName) for the year.</p>

                    @* --- MODIFIED INPUT --- *@
                    <div class="input-group mb-3">
                        <span class="input-group-text">R$</span>
                        <input type="text" class="form-control" @bind="allocationStringInput" placeholder="0" />
                    </div>

                    @if (!string.IsNullOrEmpty(popupErrorMessage))
                    {
                        <div class="alert alert-danger mt-2">@popupErrorMessage</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="ClosePopup">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="async () => await SaveValueAndNavigate()">Confirm and Edit Details</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public CostCenterParent? TargetCostCenter { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    // --- MODIFIED PROPERTIES ---
    private string allocationStringInput = "0";
    private string? popupErrorMessage;
    private CultureInfo ptBR = new CultureInfo("pt-BR");

    protected override void OnParametersSet()
    {
        if (IsVisible && TargetCostCenter != null)
        {
            // Format the decimal value to a pt-BR string, using "G" to avoid trailing zeros
            allocationStringInput = TargetCostCenter.AllocatedValue?.ToString("G29", ptBR) ?? "0";
        }
        else
        {
            allocationStringInput = "0";
        }
        popupErrorMessage = null;
    }

    private async Task SaveValueAndNavigate()
    {
        popupErrorMessage = null;
        if (TargetCostCenter == null)
        {
            popupErrorMessage = "Error: Target cost center not found.";
            return;
        }

        // Try to parse the string using Brazilian (pt-BR) culture
        if (!decimal.TryParse(allocationStringInput, NumberStyles.Any, ptBR, out decimal parsedValue))
        {
            popupErrorMessage = "Please enter a valid number (e.g., 5000 or 1234,56).";
            return;
        }

        if (parsedValue < 0)
        {
            popupErrorMessage = "Please enter a valid, non-negative allocation value.";
            return;
        }

        // --- THIS IS THE MODIFIED LOGIC ---
        var costCenterIdToNavigate = TargetCostCenter.CostCenterID;
        var valueToPass = parsedValue; // Use the correctly parsed value

        // 2. Close the popup
        await ClosePopup();

        // 3. Navigate to the details page
        // We MUST pass the value in invariant culture (with '.') for the query parameter to bind correctly
        string valueToPassInvariant = valueToPass.ToString(CultureInfo.InvariantCulture);
        NavigationManager.NavigateTo($"/manager/edit-cost-center/{costCenterIdToNavigate}?allocatedValue={valueToPassInvariant}");
    }

    private async Task ClosePopup()
    {
        await OnClose.InvokeAsync(); // Notify parent component to hide the popup
    }
}