@inherits LayoutComponentBase
@using LE_Digital_2_Blazor_Server_WebApp.Server.Services
@inject AppState AppState
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">

            @* This is the new user display section *@
            <AuthorizeView>
                <Authorized>
                    <span class="text-white">
                        User: <strong>@context.User.Identity?.Name</strong> | Roles: <strong>@(string.Join(", ", context.User.FindAll(System.Security.Claims.ClaimTypes.Role).Select(c => c.Value)))</strong>
                    </span>
                </Authorized>
                <NotAuthorized>
                    <span class="text-warning">Not Authenticated</span>
                </NotAuthorized>
            </AuthorizeView>

            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        @if (AppState.IsImpersonating)
        {
            <div class="alert alert-warning d-flex justify-content-between align-items-center m-2">
                <span>
                    <strong>Warning:</strong> You are simulating user: <strong>@AppState.ImpersonatedUser?.Identity?.Name</strong>. Your actions will be recorded as them.
                </span>
                <button class="btn btn-sm btn-danger" @onclick="StopImpersonating">Stop Simulating</button>
            </div>
        }

        <article class="content px-4">
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <p class="alert alert-danger mt-4">You are not authorized to view this application. Please contact IT for access.</p>
                </NotAuthorized>
            </AuthorizeView>
        </article>
    </main>
</div>

@code {
    private void StopImpersonating()
    {
        AppState.StopImpersonation();
        ((CustomAuthenticationStateProvider)AuthStateProvider).NotifyStateChanged();
        NavManager.NavigateTo("/", forceLoad: true);
    }
}